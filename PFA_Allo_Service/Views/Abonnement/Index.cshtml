@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@section styles {

}
@model List<Abonnement>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<div class="right_col" role="main">
    <div class="">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Abonnement</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <a class="btn btn-warning" asp-controller="Abonnement" asp-action="Create"><i class="fa-sharp fa-solid fa-plus"></i></a>
                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                Date_Debut
                                            </th>
                                            <th>
                                                Type Abonnement
                                            </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Abonnement a in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @a.Date_Debut.ToShortDateString()
                                                </td>
                                                <td>
                                                    @a.Type_Abonnement
                                                </td>
                                                <td>
                                                    <a class="btn btn-warning" asp-controller="Abonnement" asp-action="Update" asp-route-id="@a.AbonnementId"><i class="fas fa-edit" title="Modifier"></i></a> |
                                                    <a onclick="return confirm('etes vous sur de vouloir supprimer')" class="btn btn-danger" asp-controller="Abonnement" asp-action="Delete" asp-route-id="@a.AbonnementId"><i class="fas fa-trash-alt" title="Supprimer"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
@section scripts {
    
}