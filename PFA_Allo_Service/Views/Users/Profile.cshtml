@model UserVM

<h2>Modifier Profile</h2>

<form asp-action="Profile" method="post">
    <div class="form-group">
        <label for="Nom">Nom :</label>
        <input type="text" class="form-control" asp-for="Nom">
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Prenom">Prenom :</label>
        <input type="text" class="form-control" id="Prenom" name="Prenom" asp-for="Prenom">
        <span asp-validation-for="Prenom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CIN">CIN :</label>
        <input type="CIN" class="form-control" id="CIN" name="CIN" asp-for="CIN">
        <span asp-validation-for="CIN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Telephone">Telephone :</label>
        <input type="Telephone" class="form-control" id="Telephone" name="Telephone" asp-for="Telephone">
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Email">Email :</label>
        <input type="email" class="form-control" id="Email" name="Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <select asp-for="Role" class="form-control">
            <option value="">Sélectionnez un rôle</option>
            <option value="Client">Client</option>
            <option value="Fournisseur">Fournisseur</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <!-- Autres champs du formulaire... -->

    <button type="submit" class="btn btn-primary">Modifier</button>
</form>
