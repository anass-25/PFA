
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@section styles {
	<!-- bootstrap-wysiwyg -->
	<link href="~/Admin/vendors/google-code-prettify/bin/prettify.min.css" rel="stylesheet">
	<!-- Select2 -->
	<link href="~/Admin/vendors/select2/dist/css/select2.min.css" rel="stylesheet">
	<!-- Switchery -->
	<link href="~/Admin/vendors/switchery/dist/switchery.min.css" rel="stylesheet">
	<!-- starrr -->
	<link href="~/Admin/vendors/starrr/dist/starrr.css" rel="stylesheet">
}
@model Metier
<!-- page content -->
<div class="right_col" role="main">
	<div class="">
		<div class="row">
			<div class="col-md-12 col-sm-12 ">
				<div class="x_panel">
					<div class="x_title">
						<h2>Form Design <small>different form elements</small></h2>
						<ul class="nav navbar-right panel_toolbox">
							<li>
								<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
							</li>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
								<ul class="dropdown-menu" role="menu">
									<li>
										<a class="dropdown-item" href="#">Settings 1</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Settings 2</a>
									</li>
								</ul>
							</li>
							<li>
								<a class="close-link"><i class="fa fa-close"></i></a>
							</li>
						</ul>
						<div class="clearfix"></div>
					</div>
					<div class="x_content">
						<br />
						<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post">
							@* <input type="hidden" asp-for="ServiceId" /> *@
							<div class="item form-group">
								<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="MetierId">
								</label>
								<div class="col-md-6 col-sm-6 ">
									<input type="text" asp-for="MetierId" class="form-control " hidden>
								</div>
							</div>
							<div class="item form-group">
								<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="Categorie">
								</label>
								<div class="col-md-6 col-sm-6 ">
									<input type="text" asp-for="Categorie" class="form-control ">
								</div>
								<span asp-validation-for="Categorie" class="text-danger"></span>
							</div>
							<div class="item form-group">
								<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="Description">
								</label>
								<div class="col-md-6 col-sm-6 ">
									<textarea asp-for="Description" class="form-control" rows="5"></textarea>
								</div>
							</div>
							<div class="form-group">
								<label asp-for="Photo" class="col-form-label col-md-3 col-sm-3 label-align"></label>
								<div class="custom-file">
									@* <a class="btn" title="Insert picture (or just drag & drop)" id="pictureBtn"><i class="fa fa-picture-o"></i></a> *@
									<input type="file" data-role="magic-overlay" data-target="#pictureBtn" asp-for="Photo" data-edit="insertImage" />
								</div>
								<span asp-validation-for="Photo" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Service"></label>
								<div class="col-md-6 col-sm-6 ">
									<input type="text" class="form-control" asp-for="Service" />
								</div>
								<span asp-validation-for="Service" class="text-danger"></span>
							</div>
							<div class="ln_solid"></div>
							<div class="item form-group">
								<div class="col-md-6 col-sm-6 offset-md-3">
									<input type="submit" value="Modifier" class="btn btn-primary" />
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<!-- bootstrap-wysiwyg -->
	<script src="~/Admin/vendors/bootstrap-wysiwyg/js/bootstrap-wysiwyg.min.js"></script>
	<script src="~/Admin/vendors/jquery.hotkeys/jquery.hotkeys.js"></script>
	<script src="~/Admin/vendors/google-code-prettify/src/prettify.js"></script>
	<!-- jQuery Tags Input -->
	<script src="~/Admin/vendors/jquery.tagsinput/src/jquery.tagsinput.js"></script>
	<!-- Switchery -->
	<script src="~/Admin/vendors/switchery/dist/switchery.min.js"></script>
	<!-- Select2 -->
	<script src="~/Admin/vendors/select2/dist/js/select2.full.min.js"></script>
	<!-- Parsley -->
	<script src="~/Admin/vendors/parsleyjs/dist/parsley.min.js"></script>
	<!-- Autosize -->
	<script src="~/Admin/vendors/autosize/dist/autosize.min.js"></script>
	<!-- jQuery autocomplete -->
	<script src="~/Admin/vendors/devbridge-autocomplete/dist/jquery.autocomplete.min.js"></script>
	<!-- starrr -->
	<script src="~/Admin/vendors/starrr/dist/starrr.js"></script>
}
